datasource postgres {
  provider = "postgresql"
  url      = env("POSTGRESQL_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  calendar        Json?
  createdAt       DateTime        @default(now())
  currentSourceID CurrentSource[]
  firstName       String?
  id              String          @id @default(cuid())
  intersts        Keyword[]
  lastName        String?
  password        String
  pastSourceId    PastSource[]
  profession      String
  roles           String[]
  updatedAt       DateTime        @updatedAt
  username        String          @unique
  workplace       String
}

model PastSource {
  createdAt DateTime @default(now())
  id        String   @id @default(cuid())
  sourceId  String
  updatedAt DateTime @updatedAt
  userID    User[]
}

model CurrentSource {
  createdAt DateTime @default(now())
  id        String   @id @default(cuid())
  sourceId  String?
  updatedAt DateTime @updatedAt
  userId    User[]
}

model SourceDetail {
  abstract        String?
  author          String?
  createdAt       DateTime @default(now())
  id              String   @id @default(cuid())
  keyword         String?
  title           String?
  uniqueSourceKey String   @unique
  updatedAt       DateTime @updatedAt
}

model Resource {
  authorS    String?
  createdAt  DateTime  @default(now())
  id         String    @id @default(cuid())
  keywords   Keyword[]
  relaseDate DateTime?
  updatedAt  DateTime  @updatedAt
}

model Keyword {
  createdAt       DateTime   @default(now())
  id              String     @id @default(cuid())
  interested      User[]
  keyIndex        Int?
  keywords        Keyword[]  @relation(name: "parentKeyword")
  name            String?
  parentKeyword   Keyword?   @relation(name: "parentKeyword", fields: [parentKeywordId], references: [id])
  parentKeywordId String?
  resources       Resource[]
  updatedAt       DateTime   @updatedAt
}